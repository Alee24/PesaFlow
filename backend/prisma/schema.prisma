generator client {
  provider = "prisma-client-js"
}

datasource db {
// SQLite Configuration (Development)
// provider = "sqlite"
// url      = "file:./dev.db"

// MySQL Configuration (Production)
provider = "mysql"
url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  name          String?
  email         String   @unique
  phoneNumber   String   @unique @map("phone_number")
  passwordHash  String   @map("password_hash")
  role          String   @default("MERCHANT") // ADMIN, MERCHANT
  status        String   @default("ACTIVE") // ACTIVE, SUSPENDED
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  wallet        Wallet?
  notifications Notification[]
  products      Product[]
  sales         Sale[]
  initiatedTx   Transaction[] @relation("Initiator")
  approvedWithdrawals Withdrawal[] @relation("Approver")
  
  categories    Category[]
  businessProfile BusinessProfile?

  @@map("users")
}

model BusinessProfile {
  id            String   @id @default(uuid())
  userId        String   @unique @map("user_id")
  user          User     @relation(fields: [userId], references: [id])
  companyName   String   @map("company_name")
  logoUrl       String?  @map("logo_url")
  contactPhone  String?  @map("contact_phone")
  email         String?
  location      String?
  website       String?
  kraPinNumber  String?  @map("kra_pin_number")
  bankDetails   String?  @map("bank_details")
  mpesaDetails  String?  @map("mpesa_details")
  
  // SMTP Settings
  smtpHost      String?  @map("smtp_host")
  smtpPort      Int?     @map("smtp_port")
  smtpUser      String?  @map("smtp_user")
  smtpPass      String?  @map("smtp_pass")

  // M-Pesa API Credentials
  mpesaConsumerKey    String? @map("mpesa_consumer_key")
  mpesaConsumerSecret String? @map("mpesa_consumer_secret")
  mpesaPasskey        String? @map("mpesa_passkey")
  mpesaShortcode      String? @map("mpesa_shortcode")
  mpesaInitiatorName  String? @map("mpesa_initiator_name")
  mpesaInitiatorPass  String? @map("mpesa_initiator_pass")
  mpesaCallbackUrl    String? @map("mpesa_callback_url")
  mpesaEnv            String? @default("sandbox") @map("mpesa_env")
  currency            String? @default("KES")
  vatEnabled          Boolean @default(false)
  vatRate             Float   @default(16.0)


  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  @@map("business_profiles")
}

model Wallet {
  id            String   @id @default(uuid())
  userId        String   @unique @map("user_id")
  user          User     @relation(fields: [userId], references: [id])
  balance       Decimal  @default(0)
  currency      String   @default("KES")
  lastUpdatedAt DateTime @updatedAt @map("last_updated_at")

  transactions  Transaction[]
  withdrawals   Withdrawal[]

  @@map("wallets")
}

model Category {
  id            String   @id @default(uuid())
  merchantId    String   @map("merchant_id")
  merchant      User     @relation(fields: [merchantId], references: [id])
  name          String
  products      Product[]
  createdAt     DateTime @default(now()) @map("created_at")

  @@map("categories")
}

model Product {
  id            String   @id @default(uuid())
  merchantId    String   @map("merchant_id")
  merchant      User     @relation(fields: [merchantId], references: [id])
  name          String
  description   String?
  imageUrl      String?  @map("image_url")
  sku           String?
  price         Decimal
  stockQuantity Int      @default(0) @map("stock_quantity")
  isTaxable     Boolean  @default(false) @map("is_taxable")
  status        String   @default("ACTIVE") // ACTIVE, ARCHIVED
  
  categoryId    String?  @map("category_id")
  category      Category? @relation(fields: [categoryId], references: [id])
  
  createdAt     DateTime @default(now()) @map("created_at")

  saleItems     SaleItem[]

  @@map("products")
}

model Transaction {
  id              String   @id @default(uuid())
  type            String   // DEPOSIT_STK, WITHDRAWAL, FEE, SALE_CREDIT
  reference       String?  // M-Pesa Receipt or internal ref
  merchantRequestId String? @map("merchant_request_id")
  checkoutRequestId String? @map("checkout_request_id")
  amount          Decimal
  feeCharged      Decimal  @default(0) @map("fee_charged")
  status          String   @default("PENDING") // PENDING, COMPLETED, FAILED
  initiatorUserId String?  @map("initiator_user_id")
  initiator       User?    @relation("Initiator", fields: [initiatorUserId], references: [id])
  recipientWalletId String @map("recipient_wallet_id")
  recipientWallet Wallet   @relation(fields: [recipientWalletId], references: [id])
  metadata        String?  // JSON stringified
  createdAt       DateTime @default(now()) @map("created_at")

  sale            Sale?

  @@map("transactions")
}

model Sale {
  id              String   @id @default(uuid())
  merchantId      String   @map("merchant_id")
  merchant        User     @relation(fields: [merchantId], references: [id])
  totalAmount     Decimal  @map("total_amount")
  paymentMethod   String   @default("MPESA_STK") @map("payment_method")
  transactionId   String?  @unique @map("transaction_id")
  transaction     Transaction? @relation(fields: [transactionId], references: [id])
  createdAt       DateTime @default(now()) @map("created_at")

  items           SaleItem[]

  @@map("sales")
}

model SaleItem {
  id        String   @id @default(uuid())
  saleId    String   @map("sale_id")
  sale      Sale     @relation(fields: [saleId], references: [id])
  productId String   @map("product_id")
  product   Product  @relation(fields: [productId], references: [id])
  quantity  Int
  unitPrice Decimal  @map("unit_price")
  subtotal  Decimal

  @@map("sale_items")
}

model Withdrawal {
  id            String   @id @default(uuid())
  walletId      String   @map("wallet_id")
  wallet        Wallet   @relation(fields: [walletId], references: [id])
  amount        Decimal
  fee           Decimal  @default(0)
  mpesaNumber   String   @map("mpesa_number")
  status        String   @default("PENDING") // PENDING, APPROVED, PROCESSING, COMPLETED, REJECTED
  approvedBy    String?  @map("approved_by")
  approver      User?    @relation("Approver", fields: [approvedBy], references: [id])
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  @@map("withdrawals")
}

model Notification {
  id        String   @id @default(uuid())
  userId    String
  title     String
  message   String
  type      String   @default("info") // info, success, warning, error
  read      Boolean  @default(false)
  createdAt DateTime @default(now()) @map("created_at")

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

