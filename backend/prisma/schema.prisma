generator client {
  provider = "prisma-client-js"
}

datasource db {
// SQLite Configuration (Development)
// provider = "sqlite"
// url      = "file:./dev.db"

// MySQL Configuration (Production)
provider = "mysql"
url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  name          String?
  email         String   @unique
  phoneNumber   String   @unique @map("phone_number")
  passwordHash  String   @map("password_hash")
  role          String   @default("MERCHANT") // ADMIN, MERCHANT
  status        String   @default("PENDING_VERIFICATION") // ACTIVE, SUSPENDED, PENDING_VERIFICATION, REJECTED
  appealNotes   String?  @map("appeal_notes")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  wallet        Wallet?
  notifications Notification[]
  products      Product[]
  sales         Sale[]
  initiatedTx   Transaction[] @relation("Initiator")
  approvedWithdrawals Withdrawal[] @relation("Approver")
  
  categories    Category[]
  businessProfile BusinessProfile?

  @@map("users")
}

model BusinessProfile {
  id            String   @id @default(uuid())
  userId        String   @unique @map("user_id")
  user          User     @relation(fields: [userId], references: [id])
  companyName   String   @map("company_name")
  logoUrl       String?  @map("logo_url")
  contactPhone  String?  @map("contact_phone")
  email         String?
  location      String?
  website       String?
  kraPinNumber  String?  @map("kra_pin_number")
  bankDetails   String?  @map("bank_details")
  mpesaDetails  String?  @map("mpesa_details")
  
  // SMTP Settings
  smtpHost      String?  @map("smtp_host")
  smtpPort      Int?     @map("smtp_port")
  smtpUser      String?  @map("smtp_user")
  smtpPass      String?  @map("smtp_pass")

  // M-Pesa API Credentials
  mpesaConsumerKey    String? @map("mpesa_consumer_key")
  mpesaConsumerSecret String? @map("mpesa_consumer_secret")
  mpesaPasskey        String? @map("mpesa_passkey")
  mpesaShortcode      String? @map("mpesa_shortcode")
  mpesaInitiatorName  String? @map("mpesa_initiator_name")
  mpesaInitiatorPass  String? @map("mpesa_initiator_pass")
  mpesaCallbackUrl    String? @map("mpesa_callback_url")
  mpesaEnv            String? @default("sandbox") @map("mpesa_env")
  currency            String? @default("KES")
  vatEnabled          Boolean @default(false)
  vatRate             Float   @default(16.0)

  // KYC Fields
  idNumber            String?  @map("id_number")
  idFrontUrl          String?  @map("id_front_url")
  idBackUrl           String?  @map("id_back_url")
  businessPermitUrl   String?  @map("business_permit_url")
  registrationCertUrl String?  @map("registration_cert_url")
  kraCertUrl          String?  @map("kra_cert_url")
  dataPolicyAccepted  Boolean  @default(false) @map("data_policy_accepted")
  verificationNotes   String?  @map("verification_notes")

  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  @@map("business_profiles")
}

model Wallet {
  id            String   @id @default(uuid())
  userId        String   @unique @map("user_id")
  user          User     @relation(fields: [userId], references: [id])
  balance       Decimal  @default(0)
  currency      String   @default("KES")
  lastUpdatedAt DateTime @updatedAt @map("last_updated_at")

  transactions  Transaction[]
  withdrawals   Withdrawal[]

  @@map("wallets")
}

model Category {
  id            String   @id @default(uuid())
  merchantId    String   @map("merchant_id")
  merchant      User     @relation(fields: [merchantId], references: [id])
  name          String
  products      Product[]
  createdAt     DateTime @default(now()) @map("created_at")

  @@map("categories")
}

model Product {
  id            String   @id @default(uuid())
  merchantId    String   @map("merchant_id")
  merchant      User     @relation(fields: [merchantId], references: [id])
  name          String
  description   String?
  imageUrl      String?  @map("image_url")
  sku           String?
  barcode       String?
  price         Decimal
  costPrice     Decimal? @map("cost_price")
  stockQuantity Int      @default(0) @map("stock_quantity")
  minStockLevel Int      @default(0) @map("min_stock_level")
  maxStockLevel Int?     @map("max_stock_level")
  reorderPoint  Int      @default(10) @map("reorder_point")
  reorderQuantity Int?   @map("reorder_quantity")
  isTaxable     Boolean  @default(false) @map("is_taxable")
  taxRate       Decimal? @default(0) @map("tax_rate")
  status        String   @default("ACTIVE") // ACTIVE, ARCHIVED, OUT_OF_STOCK
  unit          String?  @default("pcs") // pcs, kg, liters, etc
  
  // Supplier Information
  supplierName  String?  @map("supplier_name")
  supplierContact String? @map("supplier_contact")
  
  // Batch/Lot Tracking
  batchNumber   String?  @map("batch_number")
  expiryDate    DateTime? @map("expiry_date")
  
  categoryId    String?  @map("category_id")
  category      Category? @relation(fields: [categoryId], references: [id])
  
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")
  
  saleItems     SaleItem[]
  stockMovements StockMovement[]

  @@map("products")
}

model StockMovement {
  id            String   @id @default(uuid())
  productId     String   @map("product_id")
  product       Product  @relation(fields: [productId], references: [id])
  merchantId    String   @map("merchant_id")
  type          String   // IN, OUT, ADJUSTMENT, RETURN, DAMAGED
  quantity      Int
  previousStock Int      @map("previous_stock")
  newStock      Int      @map("new_stock")
  reason        String?
  reference     String?  // Sale ID, Purchase Order, etc
  notes         String?
  createdAt     DateTime @default(now()) @map("created_at")

  @@map("stock_movements")
}

model Transaction {
  id              String   @id @default(uuid())
  type            String   // DEPOSIT_STK, WITHDRAWAL, FEE, SALE_CREDIT
  reference       String?  // M-Pesa Receipt or internal ref
  merchantRequestId String? @map("merchant_request_id")
  checkoutRequestId String? @map("checkout_request_id")
  amount          Decimal
  feeCharged      Decimal  @default(0) @map("fee_charged")
  status          String   @default("PENDING") // PENDING, COMPLETED, FAILED
  initiatorUserId String?  @map("initiator_user_id")
  initiator       User?    @relation("Initiator", fields: [initiatorUserId], references: [id])
  recipientWalletId String @map("recipient_wallet_id")
  recipientWallet Wallet   @relation(fields: [recipientWalletId], references: [id])
  metadata        String?  // JSON stringified
  createdAt       DateTime @default(now()) @map("created_at")

  sale            Sale?

  @@map("transactions")
}

model Sale {
  id              String   @id @default(uuid())
  merchantId      String   @map("merchant_id")
  merchant        User     @relation(fields: [merchantId], references: [id])
  
  // Customer Information
  customerName    String?  @map("customer_name")
  customerPhone   String?  @map("customer_phone")
  customerEmail   String?  @map("customer_email")
  
  // Pricing
  subtotal        Decimal  @default(0)
  discountType    String?  @map("discount_type") // PERCENTAGE, FIXED
  discountValue   Decimal? @default(0) @map("discount_value")
  discountAmount  Decimal  @default(0) @map("discount_amount")
  taxAmount       Decimal  @default(0) @map("tax_amount")
  totalAmount     Decimal  @map("total_amount")
  
  // Payment
  paymentMethod   String   @default("CASH") @map("payment_method") // CASH, MPESA_STK, SPLIT
  paymentStatus   String   @default("PAID") @map("payment_status") // PAID, PARTIAL, PENDING
  amountPaid      Decimal  @default(0) @map("amount_paid")
  amountDue       Decimal  @default(0) @map("amount_due")
  changeGiven     Decimal? @default(0) @map("change_given")
  
  // Split Payment Details (JSON)
  splitPayments   String?  @map("split_payments") // JSON: [{method: 'CASH', amount: 100}, {method: 'MPESA', amount: 200}]
  
  transactionId   String?  @unique @map("transaction_id")
  transaction     Transaction? @relation(fields: [transactionId], references: [id])
  
  notes           String?
  createdAt       DateTime @default(now()) @map("created_at")

  items           SaleItem[]

  @@map("sales")
}

model SaleItem {
  id        String   @id @default(uuid())
  saleId    String   @map("sale_id")
  sale      Sale     @relation(fields: [saleId], references: [id])
  productId String   @map("product_id")
  product   Product  @relation(fields: [productId], references: [id])
  quantity  Int
  unitPrice Decimal  @map("unit_price")
  discount  Decimal  @default(0)
  tax       Decimal  @default(0)
  subtotal  Decimal

  @@map("sale_items")
}

model Withdrawal {
  id            String   @id @default(uuid())
  walletId      String   @map("wallet_id")
  wallet        Wallet   @relation(fields: [walletId], references: [id])
  amount        Decimal
  fee           Decimal  @default(0)
  mpesaNumber   String   @map("mpesa_number")
  status        String   @default("PENDING") // PENDING, APPROVED, PROCESSING, COMPLETED, REJECTED
  approvedBy    String?  @map("approved_by")
  approver      User?    @relation("Approver", fields: [approvedBy], references: [id])
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  @@map("withdrawals")
}

model Notification {
  id        String   @id @default(uuid())
  userId    String
  title     String
  message   String
  type      String   @default("info") // info, success, warning, error
  read      Boolean  @default(false)
  createdAt DateTime @default(now()) @map("created_at")

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

